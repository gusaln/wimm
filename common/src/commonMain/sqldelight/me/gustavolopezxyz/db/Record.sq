selectPaginated:
SELECT * FROM record LIMIT :limit, :offset;

selectById:
SELECT * FROM record WHERE id = :id;

selectByReference:
SELECT * FROM record WHERE reference = :reference;

insertRecord:
INSERT INTO record(description, reference)
VALUES (:description, :reference);

updateRecord:
UPDATE record
SET
    description = :description
WHERE id = :id;

deleteRecord {
    DELETE FROM entry WHERE record_id = :id;
    DELETE FROM record WHERE id = :id;
}